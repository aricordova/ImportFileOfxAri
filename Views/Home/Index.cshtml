

<!DOCTYPE html>

<html>

<h2>Gerenciador de arquivos OFX</h2>

<BR />

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
        <span>Selecione um ou mais arquivos OFX:</span>
        <input type="file" name="postedFiles" multiple />
        <input type="submit" value="Upload" />
        <br />
        <br />
        <span style="color:green">@Html.Raw(ViewBag.Message)</span>
    </form>



    <BR />
    <BR />





    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
        }

            table th {
                background-color: #F7F7F7;
                color: #333;
                font-weight: bold;
            }

            table th, table td {
                padding: 5px;
                border: 1px solid #ccc;
            }
    </style>
</head>


<body>




    <table cellpadding="0" cellspacing="0">
        <tr>

            <th>Data transação</th>
            <th>Tipo transação</th>
            <th>Valor transação</th>
            <th>Descrição</th>


        </tr>





        @foreach (Import import in Model)
        {
            <tr>
                <td>@import.DataTarnsacao</td>
                <td>@import.Tipo</td>
                <td>@import.Valor</td>
                <td>@import.Descricao</td>

            </tr>


        }
    </table>
</body>
</html>


